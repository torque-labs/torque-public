{
  "extends": "@torque-labs/typescript-config/react-library.json",
  "compilerOptions": {
    "strict": true,
    "lib":["ES2022", "DOM"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "target": "ES2022",
    "isolatedModules": true,
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "#*": ["./src/*"]
    },
    "noEmit": false,
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "allowImportingTsExtensions": false,
    "sourceMap": true,
    "noImplicitOverride": true,
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./declarations/**/*.d.ts"],
  "exclude": ["./node_modules", "./dist", "./**/*.svg"]
}
