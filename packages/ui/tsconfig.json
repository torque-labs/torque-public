{
  "extends": "@torque-labs/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"]
    },
    "noEmit": false,
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "declarationMap": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./declarations/**/*.d.ts"],
  "exclude": ["./node_modules", "./dist", "./**/*.svg"]
}
