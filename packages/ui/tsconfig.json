{
  "extends": "@torque-labs/typescript-config/react-library.json",
  "include": ["src", "declarations"],
  "exclude": ["node_modules", "dist", "**/*.svg"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"]
    },
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types"
  }
}
