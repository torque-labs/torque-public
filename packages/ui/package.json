{
  "name": "@torque-labs/torque-ui",
  "description": "The Official Torque Labs UI Kit",
  "private": false,
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./index.css": "./dist/index.css"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "prebuild": "npm run icons",
    "build": "tsup",
    "predev": "npm run icons",
    "dev": "tsup --watch",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "lint": "eslint \"src/**/*.ts*\"",
    "test": "jest",
    "prepack": "npm run build",
    "ui:add": "npx shadcn@latest add",
    "icons": "npx @svgr/cli --out-dir src/components/icons --typescript --jsx-runtime automatic -- assets"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.0",
    "@solana/actions": "^1.6.5",
    "@solana/actions-spec": "^2.4.1",
    "@solana/spl-token": "^0.4.9",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/wallet-adapter-react-ui": "^0.9.35",
    "@solana/web3.js": "^1.95.4",
    "@torque-labs/torque-ts-sdk": "^0.0.107",
    "@torque-labs/torque-utils": "^1.1.43",
    "bs58": "^6.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "framer-motion": "^11.11.9",
    "lucide-react": "^0.453.0",
    "tailwind-merge": "^2.0.0",
    "vaul": "^1.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.13.0",
    "@svgr/cli": "^8.1.0",
    "@torque-labs/eslint-config": "*",
    "@torque-labs/tailwind-config": "*",
    "@torque-labs/typescript-config": "*",
    "@types/react": "^18.2.61",
    "autoprefixer": "^10.4.18",
    "cssnano": "^7.0.6",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  }
}
